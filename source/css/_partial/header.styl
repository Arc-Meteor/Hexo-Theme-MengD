/* 头信息 */
header{
    padding-bottom: 150px;
    margin: 0 30px;
    background-size: cover;
}

.author-info .avatar{
    width: 100px;
    height: 100px;
    border-radius: 50%;
}
.author-info .author{
    font-weight: 700;
    font-size: 1.3rem;
    color: #ff7242;
    padding-top: 10px;
}
.author-info div{
    float: left;
    text-align: center;
    width: 100px;
}
.card-content .description .social-icon a i{
    color: black;
    font-size: 16px;
    margin-right: 10px;
    margin-top: 10px;
}
.card-content .description .social-icon{
    float: right;
}
.description{
    margin: 5% 0;
    font-size: 0.9rem;
    color: #565654;
    float: right;
}
