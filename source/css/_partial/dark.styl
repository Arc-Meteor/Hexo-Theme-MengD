
/* 深色模式 */
body.dark
    transition: all .3s linear;
    color: rgba(255, 255, 255, .6);
    background-color: #333841;
    .fancybox-stage img,.avatar
        -webkit-filter: brightness(.7);
        filter: brightness(.7);
    header p,.social-icon i
        color: rgba(255, 255, 255, .6) !important
    #body-wrap,#toc
        background-color: #282c34;
        main.content 
            code
                background: rgba(244,116,102,.05);
            img
                -webkit-filter: brightness(.7);
                filter: brightness(.7);
            .post-copyright
                box-shadow: 2px 2px 5px #222;
                background-color: #333841;
            .social-share
                .wechat-qrcode,h4
                    color: rgba(255, 255, 255, .6);
                    background-color: #333841;
                    border: 1px solid #333841;
                    box-shadow: 0 2px 10px #333841;
                    border-radius: 5px;
                .wechat-qrcode::after
                        border-color: #333841 transparent transparent transparent;
            #link *
                color: rgba(255, 255, 255, .6);

        .post-title h2 a
            color rgba(255,255,255,.9);
        .post-item
            border-bottom: 2px solid rgba(255, 255, 255, .6);
    #rightside
        -webkit-filter: brightness(.7);
        filter: brightness(.7);
    #artitalk_main 
        *
            color: rgba(255, 255, 255, .6);
        #lazy
            background-color: #333841;
    #hpp_talk
        .hppt_normal-shadow
            box-shadow: 2px 2px 3px #222;
    #twikoo 
        .tk-submit,.tk-comment
            box-shadow: 2px 2px 5px #222;
            background-color: #333841;
        .tk-extra
            background: transparent;
        .tk-replies,.tk-comment
            box-shadow: 0 0 black;
    #vcomments,#wcomments
        .vpanel,.vcard
            background-color: #333841;
            box-shadow: 2px 2px 5px #222;
        .vquote .vcard
            box-shadow: 0px 0px 0px #222;
        .vquote
            border-left: 0;
        .vwrap,.vh
            border: 0px solid #222;