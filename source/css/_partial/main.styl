/* 内容文章 */

main{
    width: 720px;
    height: auto;
    margin: 0 auto;
}

main.content .post-title h2 a{
    color: black;
}

main.content .post-item
    margin: 50px 30px
    border-bottom: 2px solid #f8f8f8;

main.content .post-item .post-title{
    padding-bottom: 16px;
}

main.content .post-item .post-description p{
    line-height: 2em;
    letter-spacing: 0.2px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

main.content .post-item .post-footer{
    padding: 20px 0 10px 0;
    display inline-block
}

main.content .post-item .post-footer div{
    color: #858585;
    float: left;
    font-size: 13px;
    max-width: 100%;
    height: 25px;
    margin-right: 20px;
}
main.content .post-item .post-footer div .fa.fa-tag{
    font-size: 11px;
    margin-top: 3px;
}

main.content .post-item .post-footer .post-tag a{
    color: #666666;
}

main.content .pagination{
    padding: 30px 0 60px 0;
    text-align: center;
    color: #666666;
    font-size: 14px;
    width 100%
    display: inline-block
}

main.content .pagination .page-number{
    display: inline-block;
    margin: 0 .2rem;
    min-width: 1.2rem;
    height: 1.2rem;
    color: #00c4b6;
    text-align: center;
    line-height: 1.2rem;
}
main.content .pagination .page-number.current {
    background: #00c4b6;
    color: #fff;
}

