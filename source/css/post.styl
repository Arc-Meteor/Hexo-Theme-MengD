article
    .post 
    .post-tag
        color #858585
        float left
        font-size 16px
        max-width 300px
        height 25px
        padding-top 5px
        .post-meta
            text-align center
            margin-bottom .5rem
            font-size 90%
    .post-title,.post-meta
            text-align center
        .post-title .title:before
            content none
        .post-title h2:before 
                content none

    .post-content
        padding-top 50px

    .post-content 
        p
            line-height 1.7em
            letter-spacing .2px
            font-weight 530
            margin 0 0 .8rem
        h1,h2,h3,h4,h5,h6
            margin-block-start .83em
            margin-block-end .83em
        h1:before,
        h2:before,
        h3:before,
        h4:before,
        h5:before,
        h6:before
            color $fan
            margin-right 10px
            display inline-block
            content '\f863'
            -webkit-animation turn 1s linear infinite
            -moz-animation turn 1s linear infinite
            -o-animation turn 1s linear infinite
            -ms-animation turn 1s linear infinite
            animation turn 1s linear infinite
            font-family 'Font Awesome 5 Free'
        h1
            font-size 1.5em
        h2
            font-size 1.3em
        h3
            font-size 1.1em
        h4
            font-size .9em
        h5
            font-size .7em
        h6
            font-size .5em
        figure.highlight 
            td 
                padding 0
                border none
                vertical-align unset
                padding-right .5rem
                padding-left .5rem
            .highlight-tools 
                position relative
                overflow hidden
                width 100%
                height 1.5rem
                background #1c1c1c
                color rgba(238,255,255,.8)
                font-size 14px
            .code pre 
                padding-right .5rem
                padding-left .5rem
                width 100%
                margin 0
                padding 8px 0
                border none
        code
            padding .1rem .2rem
            background rgba(27,31,35,.05)
            color #f47466
            border-radius 5px
            margin 0 6px
            word-wrap break-word
            word-break break-word
            overflow-wrap break-word
        img 
            margin 0 auto .8rem
            display block
            max-width 100%
        .table-wrap 
            overflow-x scroll
            margin 0 0 1rem
        table 
            display table
            border-spacing 0
            border-collapse collapse
            empty-cells show
            thead 
                background rgba(153,169,191,.1)
            th,td 
                padding .3rem .6rem
                border 1px solid #eee
                vertical-align middle

#rightside
    position fixed 
    right 0px 
    bottom 80px 
    z-index 100 
    width 30px
    #rightside-item
        text-align center
        a
            display inline-block 
            width 30px 
            height 30px 
            background-color $main 
            color #fff 
            margin-bottom 3px 
            border-radius 6px 
            i 
                margin-top 7px        

/* twikoo */
#twikoo .tk-comments-container
    .tk-comment
        box-shadow 2px 2px 5px #bbb
        background rgba(255,255,255,.3)
        border-radius 8px
        padding 30px
        margin 30px 0 0 0
    .tk-main .tk-comment
        box-shadow 0 0 black
    .tk-extras .tk-extra
        padding: .2em .5em;
        border-radius: .2em;    
        background: #ededed;


/* 评论 valine / waline */   
#Direct-Comments
    text-align center
    padding-top 30px 
    a
        display inline-block 
        width 30px 
        height 30px 
        background-color $main 
        color #fff 
        border-radius 6px 
        i 
            margin-top 7px



.comment-head
    .comment-headline
        margin-bottom 1.6rem 
        display inline-block 
        vertical-align middle 
        font-weight 700 
        font-size 20px 

#vcomments,#wcomments
    .vbtn
        border none 
        background $main 
        color #fff
    code 
        color #c7254e 
        background-color #f2ecee 
    .vcard 
        box-shadow 2px 2px 5px #bbb 
        background rgba(255, 255, 255, 0.3) 
        border-radius 8px 
        padding 30px 
        margin 30px 0px 0px 0px 
    .vquote .vcard 
        box-shadow 2px 2px 5px transparent 
        background rgba(255, 255, 255, 0.0) 
        padding 0px 
    .vcontent p
        color #777
    .vmeta .vat
        padding 0 0.8rem
        border 1px solid $main   
        border-radius 5px
        color $main   
        font-size 0.7125rem                        
    
