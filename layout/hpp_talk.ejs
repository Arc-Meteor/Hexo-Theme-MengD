<div class="main">
    <div id="page-title" class="page-title">
        <h2><%= theme.hpp_talk.title %></h2>
    </div>
    <% var option = theme.hpp_talk.option ? JSON.stringify(theme.hpp_talk.option) : false %>
    <link rel="stylesheet" href="<%-theme.CDN.hpp_talk_css%>" /> 
    <%if(theme.pjax){%>
    <div id="hpp_talk" hpp_talk='<script>
    function initHPP_talk(){
        let initData = {
            id:"hpp_talk",
            domain: "<%-theme.hpp_talk.domain%>",
            limit: <%-theme.hpp_talk.limit%>,
            start: <%-theme.hpp_talk.start%>
        }
        var option = <%-option%>;
        if(option){
            initData = Object.assign(initData, option)
        }
        new hpp_talk(initData)
    }
    initHPP_talk()
    </script>'></div>
    <%}%>
    <%if(!theme.pjax){%>
    <div id="hpp_talk"></div>
    <script src="<%-theme.CDN.hpp_talk_js%>"></script>
    <script>
    function initHPP_talk(){
        let initData = {
            id:"hpp_talk",
            domain: "<%-theme.hpp_talk.domain%>",
            limit: <%-theme.hpp_talk.limit%>,
            start: <%-theme.hpp_talk.start%>
        }
        var option = <%-option%>;
        if(option){
            initData = Object.assign(initData, option)
        }
        new hpp_talk(initData)
    }
    initHPP_talk()
    </script>
    <%}%>
</div>
<section id="rightside">
	<div id="rightside-item">
		<a id="darkmode" title="<%-_p('rightside.dark')%>">
			<i class="fas fa-moon"></i>
		</a>
		<a href="#" title="<%-_p('rightside.back_to_top')%>">
			<i class="fas fa-arrow-up"></i>
		</a>
	</div>
</section>