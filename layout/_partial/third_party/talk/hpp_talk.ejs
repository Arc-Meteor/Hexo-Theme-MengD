<% var option = theme.hppTalk.option ? JSON.stringify(theme.hppTalk.option) : false %>
<div class="main">
    <div id="page-title" class="page-title">
        <h2><%= theme.hppTalk.title %></h2>
    </div>
    
    <link rel="stylesheet" href="<%-theme.hppTalk.sourceCss%>" /> 
    <div id="hpptalk"></div>
    <script>
        getScript("<%-theme.hppTalk.sourceJs%>",function(){
            let initData = {
                id:"hpptalk",
                domain: "<%-theme.hppTalk.domain%>",
                limit: <%-theme.hppTalk.limit%>,
                start: <%-theme.hppTalk.start%>
            }
            var option = <%-option%>;
            if(option){
                initData = Object.assign(initData, option)
            }
            new hpp_talk(initData)
        })
    </script>
</div>